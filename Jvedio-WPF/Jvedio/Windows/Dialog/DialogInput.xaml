<Window
    x:Class="Jvedio.DialogInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:super="https://github.com/SuperStudio/SuperControls"
    Title="DialogInput"
    Width="500"
    Height="500"
    AllowsTransparency="True"
    Background="Transparent"
    ContentRendered="Window_ContentRendered"
    Focusable="True"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Border Background="{DynamicResource Window.Background}" Opacity="0.75" />
        <Grid
            Width="auto"
            Height="auto"
            MinWidth="400"
            MinHeight="150"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Border
                Margin="5"
                Background="{DynamicResource Window.Background}"
                CornerRadius="3"
                Effect="{StaticResource PopupDropShadowEffect}" />
            <Border
                x:Name="border"
                Margin="5"
                Background="{DynamicResource Window.InnerDialog.Background}"
                CornerRadius="3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Name="TitleTextBlock"
                        Grid.Row="0"
                        Margin="25,20,25,10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource BaseTextBlock}"
                        Text="Title"
                        TextAlignment="Left"
                        TextTrimming="WordEllipsis"
                        TextWrapping="NoWrap"
                        ToolTip="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}" />
                    <super:SearchBox
                        Name="searchBox"
                        Grid.Row="1"
                        Margin="10"
                        PlaceHolder="{DynamicResource PleaseEnter}"
                        PreviewKeyUp="ContentTextBox_PreviewKeyUp" />
                    <StackPanel
                        Grid.Row="2"
                        Margin="10"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">

                        <Button
                            MinWidth="60"
                            Margin="5,0"
                            Click="Confirm"
                            Content="{DynamicResource Confirm}"
                            Cursor="Hand"
                            Style="{StaticResource ButtonPrimary}" />
                        <Button
                            MinWidth="60"
                            Margin="5,0"
                            Click="Cancel"
                            Content="{DynamicResource Cancel}"
                            Cursor="Hand"
                            Style="{StaticResource ButtonDanger}" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
